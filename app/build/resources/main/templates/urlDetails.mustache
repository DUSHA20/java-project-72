<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Детали URL</title>
    <style>
        .flash-message {
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            color: black;
            position: relative;
        }

    </style>
</head>
<body style="background-color: white;">

<!-- Верхняя шапка страницы -->
<div style="background-color: #4682B4; padding: 20px 10px; text-align: left; width: 100%; margin-top: -10px;">
    <a href="/" style="color: white; text-decoration: none;">На главную</a>
</div>

<!-- Flash сообщения -->
{{#flash.success}}
    <div class="flash-message flash-success">{{flash.success}}</div>
{{/flash.success}}
{{#flash.error}}
    <div class="flash-message flash-error">{{flash.error}}</div>
{{/flash.error}}

<!-- Информация о URL -->
<div style="margin: 20px auto; width: 80%;">
    <h2>ID: {{id}}</h2>
    <p>Name: {{name}}</p>
    <p>Created At: {{createdAt}}</p>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Найдите все флеш-сообщения
        var flashMessages = document.querySelectorAll('.flash-message');

        // Пройдитесь по каждому сообщению
        flashMessages.forEach(function(message) {
            // Установите таймер для скрытия сообщения через 10 секунд
            setTimeout(function() {
                message.classList.add('hidden');
            }, 10000); // 10000 миллисекунд = 10 секунд
        });
    });
</script>

</body>
</html>