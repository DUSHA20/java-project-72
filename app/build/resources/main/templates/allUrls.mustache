<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список URL</title>
    <style>
        .flash-message {
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            color: black;
            position: relative;
        }
    </style>
</head>
<body style="background-color: white; margin: 0;">

<div style="background-color: #4682B4; padding: 20px 10px; text-align: left; width: 100%; margin-top: -10px;">
    <a href="/" style="color: white; text-decoration: none;">На главную</a>
</div>

<!-- Flash сообщения -->
{{#flash.success}}
    <div class="flash-message flash-success">{{flash.success}}</div>
{{/flash.success}}
{{#flash.error}}
    <div class="flash-message flash-error">{{flash.error}}</div>
{{/flash.error}}

<table style="border-collapse: collapse; margin: 20px auto; width: 80%;">
    <tr style="background-color: #4682B4;">
        <th style="padding: 8px;">ID</th>
        <th style="padding: 8px;">Name</th>
        <th style="padding: 8px;">Created At</th>
    </tr>
    {{#urls}}
        <tr style="border: 1px solid black;">
            <td style="padding: 8px;">{{id}}</td>
            <td style="padding: 8px;">{{name}}</td>
            <td style="padding: 8px;">{{createdAt}}</td>
        </tr>
    {{/urls}}
</table>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Найдите все флеш-сообщения
        var flashMessages = document.querySelectorAll('.flash-message');

        // Пройдитесь по каждому сообщению
        flashMessages.forEach(function(message) {
            // Установите таймер для скрытия сообщения через 10 секунд
            setTimeout(function() {
                message.classList.add('hidden');
            }, 10000); // 10000 миллисекунд = 10 секунд
        });
    });
</script>

</body>
</html>